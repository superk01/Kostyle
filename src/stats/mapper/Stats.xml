<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stats.mapper.StatsMapper">
	<cache />
	
	<insert id="insertHitCount" parameterType="HitCount">
		insert into hitcount(
			s_num, cnt_prdurl, cnt_date, c_num
		)
		values(
			#{s_num}, #{cnt_prdurl}, SYSDATE, #{c_num} 
		)
	</insert>

	<select id="listHitCount" resultType="HitCount">
		select * from hitcount
	</select>
	
	<select id="getSNum" parameterType="string" resultType="ShoppingMall">
		select * from shoppingmall
			where s_shopurl = #{s_shopurl}
	</select>
	
	<insert id="insertSearchKeyword" parameterType="SearchKeyword">
		insert into searchkeyword(
			c_num, sk_searchkey, sk_date
		) 
		values(
			#{c_num}, #{sk_searchkey}, SYSDATE
		)
	</insert>
	
	<select id="listSearchKeyword" resultType="SearchKeyword">
		select * from searchkeyword
	</select>	
	
</mapper>